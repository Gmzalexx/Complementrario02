<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Complementrario02.AB"
             Title="AB">
    <StackLayout Padding="20">

        <!--Agregamos un label con un text-->
        <Label Text="Ingresa el valor de A:" />
        <!--Un entry en nuestra app para poder ingresar informacion-->
        <Entry x:Name="entryA" Keyboard="Numeric" />
        <!--Un label mas -->
        <Label Text="Ingresa el valor de B:" />
        <!--Otro entry pero esta vez con un keyboard numeric este hara que cuando vayamos a ingresar
        nos tirara un teclado numerico-->
        <Entry x:Name="entryB" Keyboard="Numeric" />
        <!--Agregamos un button con un evento cliked haciendo una tipo instancia a xaml.cs del proyecto-->
        <Button Text="Calcular" Clicked="Button_Clicked" />

        <Label x:Name="resultLabel" />
        <!--Agregamos una img para que nuestro proyecto este mejor visualmente-->
        <Image Source="C:\Users\Alexis\Documents\Practica 09\Complementrario02\Complementrario02\A B.jpg" WidthRequest="1280" HeightRequest="720" Aspect="AspectFit" />

    </StackLayout>

</ContentPage>